require 'rubygems'

module BoxGrinder
  require 'boxgrinder-build/cli'
  require 'pathname'
  require 'rbconfig'

  ARGV_CLONE = ARGV.clone

  def self.ensure_root
    unless Process.uid == 0
      puts 'BoxGrinder requires root permissions, but will switch to your ' +
        'local user when possible. Files will be owned by your user.'
      
      # http://blade.nagaokaut.ac.jp/cgi-bin/scat.rb/ruby/ruby-talk/151376
      ruby   = File.join(RbConfig::CONFIG['bindir'],
                         RbConfig::CONFIG['RUBY_INSTALL_NAME'] +
                         RbConfig::CONFIG['EXEEXT'])
      path   = '-I' << $:.join(':')
      script = Pathname.new(__FILE__).realpath.to_s
      args   = ARGV_CLONE
      chusr  = '--change-to-user'
      cmd    = ['sudo', '-E', ruby, path, script] + args + [chusr]
      
      exec(Escape::shell_command(cmd))
    end
  end

  CLI.start
end
